<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>E Store - eCommerce HTML Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="eCommerce HTML Template Free Download" name="keywords">
    <meta content="eCommerce HTML Template Free Download" name="description">

    <!-- Favicon -->
    <link href="/img/favicon.ico" rel="icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap"
        rel="stylesheet">

    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="/lib/slick/slick.css" rel="stylesheet">
    <link href="/lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
    <style>
        .btn-danger {
            color: #fff;
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-outline-success {
            color: #fff;
            border-color: #28a745;
            background-color: #28a745;
        }
    </style>
</head>

<body>
    {{>Header}}

    <!-- Breadcrumb Start -->
    <div class="breadcrumb-wrap">
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/admin/courses-management">Course Management</a></li>
                <li class="breadcrumb-item active">Course Detail</li>
            </ul>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Product Detail Start -->
    <div class="product-detail">


        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-body" style="height: 400px">
                        <iframe width="100%" height="100%" src="https://www.youtube.com/embed/8RYslufQHlg"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">
                    <div class="product-detail-top">
                        <div class="row align-items-center">
                            <div class="col-md-5">
                                <div class="product-slider-single normal-slider">
                                    <img src="data:image/jpg;base64,{{course.avatar}}" alt="Image">
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="product-content">
                                    <div id="content">
                                        <div class="title">
                                            <h2 id="courseName">{{course.name}}</h2>
                                        </div>

                                        <p id="briefDescription">{{course.brief_description}}</p>
                                        <div class="price">
                                            <h4>Price:</h4>
                                            <p>$</p><p id="price"> {{course.price}} </p><span>$149</span>
                                        </div>
                                        <div class="">
                                            <button class="btn btn-edit-detail">
                                                <i class="fas fa-edit">Edit</i>
                                            </button>
                                        </div>
                                    </div>
                                    <form id="coursedetail" style="display: none;" method="POST" action="">
                                        <div class="form-group">
                                            <label for="coursename">Course name</label>
                                            <input type="text" class="form-control" id="courseNameInput" name="courseNameInput"
                                                aria-describedby="emailHelp" placeholder="Enter course title" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="briefDescription">Brief description</label>
                                            <input type="text" class="form-control" id="briefDescriptionInput" name="briefDescriptionInput"
                                                placeholder="Enter brief description" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="price">Price</label>
                                            <input type="number" min="0" class="form-control" id="priceInput" name ="priceInput"
                                                placeholder="Enter course price" required>
                                        </div>
                                        <button class="btn btn-outline-success" id="saveDetailBtn" name="action" value="course_detail" type="submit">
                                            <i class="fa fa-check" aria-hidden="true"></i>
                                            Save
                                        </button>
                                        <button class="btn btn-danger" id="detailCancelBtn"type="button">
                                            <i class="fa fa-danger" aria-hidden="true"></i>
                                            Cancel
                                        </button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="row product-detail-bottom">
                        <div class="col-lg-12">
                            <ul class="nav nav-pills nav-justified">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="pill" href="#description">Description</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="pill" href="#reviews">Reviews
                                        ({{reviewList.length}}
                                        )</a>
                                </li>
                            </ul>

                            <div class="tab-content">
                                <div id="description" class="container tab-pane active">
                                    <div class="desc-container">
                                        {{course.full_description}}
                                    </div>
                                    <div class="editor" style="display: none;">
                                        <form method="POST" action="" name="desc">
                                            <div class="card">
                                                <div class="card-header">
                                                    <h4>WYSIWYG Editor</h4>
                                                </div>
                                                <div class="card-body">
                                                    <div class="form-group">
                                                        <label for="txtDesc">Course Description</label>
                                                        <textarea id="txtDesc" name="desc" autofocus cols="40" rows="50"
                                                            class="form-control">{{course.full_description}}</textarea>
                                                    </div>
                                                </div>
                                                <div class="card-footer">
                                                    <button class="btn btn-outline-success" name="action" value="course_description" type="Submit">
                                                        <i class="fa fa-check" aria-hidden="true"></i>
                                                        Save
                                                    </button>
                                                    <button class="btn btn-danger" id="cancelDescBtn" type="button">
                                                        <i class="fa fa-danger" aria-hidden="true"></i>
                                                        Cancel
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="">
                                        <button class="btn btn-edit-desc">
                                            <i class="fas fa-edit">Edit</i>
                                        </button>
                                    </div>

                                </div>

                                <div id="reviews" class="container tab-pane fade">
                                    {{#if isCommented}}
                                    <div>YOUR REVIEW</div>
                                    <div class="reviews-submitted">
                                        <div class="reviewer">{{isCommented.owner.name}} - <span>{{date}}</span></div>
                                        <div class="ratting">
                                            {{#each userStar}}
                                            <i class="fa {{this}}"></i>
                                            {{/each}}
                                        </div>
                                        <p>
                                            {{isCommented.comment}}
                                        </p>
                                    </div>
                                    {{else}}
                                    <div class="reviews-submit">
                                        <h4>Give your Review:</h4>
                                        <div class="stars">
                                            <label class="rate">
                                                <input type="radio" name="radio1" id="star1" value="star1">
                                                <div class="face"></div>
                                                <i class="far fa-star star one-star"></i>
                                            </label>
                                            <label class="rate">
                                                <input type="radio" name="radio1" id="star2" value="star2">
                                                <div class="face"></div>
                                                <i class="far fa-star star two-star"></i>
                                            </label>
                                            <label class="rate">
                                                <input type="radio" name="radio1" id="star3" value="star3">
                                                <div class="face"></div>
                                                <i class="far fa-star star three-star"></i>
                                            </label>
                                            <label class="rate">
                                                <input type="radio" name="radio1" id="star4" value="star4">
                                                <div class="face"></div>
                                                <i class="far fa-star star four-star"></i>
                                            </label>
                                            <label class="rate">
                                                <input type="radio" name="radio1" id="star5" value="star5">
                                                <div class="face"></div>
                                                <i class="far fa-star star five-star"></i>
                                            </label>
                                        </div>
                                        <!--                                        </div>-->
                                        <div class="row form">
                                            <form action="/add-review" method="post">
                                                <div class="col-sm-12">
                                                    <textarea placeholder="Review" name="review_content"
                                                        required></textarea>
                                                </div>
                                                <input type="text" id="start-getter" name="num_star"
                                                    style="display: none" />
                                                <div class="col-sm-12">
                                                    <button type="submit">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    {{/if}}
                                    <div>OTHER REVIEWS</div>
                                    {{#each reviewList}}
                                    <div class="reviews-submitted">
                                        <div class="reviewer">{{this.owner.name}} - <span>12 Dec 2020</span></div>
                                        <div class="ratting">
                                            {{#each starArr}}
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            {{/each}}
                                        </div>
                                        <p>
                                            {{this.comment}}
                                        </p>
                                    </div>
                                    {{/each}}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Side Bar Start -->
                <div class="col-lg-4 sidebar">

                    <div class="sidebar-widget widget-slider">
                        <div class="w-100 text-center">
                            <h3 class="font-weight-bold" style="color: #FF6F61">Preview this course</h3>
                        </div>
                        <div class="sidebar-slider normal-slider">
                            <div class="product-item">

                                <div class="product-image">
                                    <a href="product-detail.hbs">
                                        <img src="/img/product-7.jpg" alt="Product Image">
                                    </a>
                                    <div class="product-action">
                                        <a href="#" data-toggle="modal" data-target="#exampleModalCenter">
                                            <i class="fa fa-play"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="product-item">
                                <div class="product-image">
                                    <a href="product-detail.hbs">
                                        <img src="/img/product-8.jpg" alt="Product Image">
                                    </a>
                                    <div class="product-action">
                                        <a href="#"><i class="fa fa-play"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="product-item">
                                <div class="product-image">
                                    <a href="product-detail.hbs">
                                        <img src="/img/product-9.jpg" alt="Product Image">
                                    </a>
                                    <div class="product-action">
                                        <a href="#"><i class="fa fa-play"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="sidebar-widget brands">
                        <h2 class="title">Session 1: Khóa học lập trình Android cơ bản</h2>

                    </div>
                </div>
                <!-- Side Bar End -->
            </div>
        </div>
    </div>
    <!-- Product Detail End -->

    <!-- Brand Start -->
    <div class="brand">
        <div class="container-fluid">
            <div class="brand-slider">
                <div class="brand-item"><img src="/img/brand-1.png" alt=""></div>
                <div class="brand-item"><img src="/img/brand-2.png" alt=""></div>
                <div class="brand-item"><img src="/img/brand-3.png" alt=""></div>
                <div class="brand-item"><img src="/img/brand-4.png" alt=""></div>
                <div class="brand-item"><img src="/img/brand-5.png" alt=""></div>
                <div class="brand-item"><img src="/img/brand-6.png" alt=""></div>
            </div>
        </div>
    </div>
    <!-- Brand End -->

    {{>Footer}}

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/slick/slick.min.js"></script>

    <script src="https://cdn.tiny.cloud/1/ezd73nxbzc7bu6e86g2l82jbbffke0mwevwrnyvc5q8h89j6/tinymce/5/tinymce.min.js"
        referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#txtDesc',
            plugins: 'paste image link autolink lists table media',
            menubar: true,
            toolbar: [
                'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
            ],
        });
    </script>
    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
    <script>
        var editor = $('.editor');
        var editbtn = $('.btn-edit-desc');
        var savebtn = $('.btn-outline-success');
        var description = $('.desc-container');
        var cancelDescBtn= $('#cancelDescBtn');
        $('#txtDesc').html(description.html());
        description.html($.parseHTML(description.text()));
        editbtn.click(function () {
            $('#txtDesc').html(description.html());
            description.css("display", "none");
            editbtn.css("display", "none");
            editor.css("display", "flex");
        })
        cancelDescBtn.click(function (){
            description.css("display", "block");
            editbtn.css("display", "flex");
            editor.css("display", "none");
        })

        var editDetailBtn = $('.btn-edit-detail');
        var detailCancelBtn = $('#detailCancelBtn');
        editDetailBtn.click(function () {
            $('#courseNameInput').val($('#courseName').text());
            $('#briefDescriptionInput').val($('#briefDescription').text());
            $('#priceInput').val(parseInt($('#price').text()));
            console.log($('#price').text());

            $('#content').css("display", "none");
            $('#coursedetail').css("display", "block");
        })
        detailCancelBtn.click(function(){
            $('#content').css("display", "block");
            $('#coursedetail').css("display", "none");
        })

    </script>
</body>

</html>