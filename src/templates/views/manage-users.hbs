<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>E Store - eCommerce HTML Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="eCommerce HTML Template Free Download" name="keywords">
    <meta content="eCommerce HTML Template Free Download" name="description">



    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap"
        rel="stylesheet">

    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="/lib/slick/slick.css" rel="stylesheet">
    <link href="/lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
    <style>
        .user-detail .nav.nav-pills .nav-link:hover,
        .user-detail .nav.nav-pills .nav-link.active {
            color: #000000;
            background: #FF6F61;
        }

        .user-detail .nav.nav-pills .nav-link {
            color: #FF6F61;
            background: #000000;
            border-radius: 0;
            transition: all .3s;
        }

        .user-detail .tab-content {
            background: #ffffff;
            padding: 25px 0px 15px 0px;
        }

        .btn-danger {
            color: #fff;
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-outline-success {
            color: #fff;
            border-color: #28a745;
            background-color: #28a745;
        }
    </style>
</head>

<body>
    {{>Header}}

    {{!--
    <!-- Breadcrumb Start -->
    <div class="breadcrumb-wrap mb-3">
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active">Users Management</li>
            </ul>
        </div>
    </div>
    <!-- Breadcrumb End --> --}}

    <!-- Modal Start -->
    <div class="modal fade" id="editUserInfoModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form id="editUserInfoForm" method="POST" action="">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit user's detail</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <input type="text" class="form-control" id="UserIdInput" name="UserIdInput" value=""
                                style="display:none" required>
                            <input type="text" class="form-control" id="UserRoleInput" name="UserRoleInput" value=""
                                style="display:none" required>
                            <label for="UserName">Username</label>
                            <input type="text" class="form-control" id="UserNameInput" name="UserNameInput"
                                placeholder="Enter username" required>
                            <label for="Phone">Phone</label>
                            <input type="tel" class="form-control" id="PhoneInput" name="PhoneInput"
                                placeholder="Enter phone number" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" required>
                            <label for="Email">Email</label>

                            <input type="text" class="form-control" id="EmailInput" name="EmailInput"
                                placeholder="Enter email" required>
                            <label for="password">Reset password</label>

                            <input type="password" class="form-control" id="ResetPasswordInput"
                                name="ResetPasswordInput" placeholder="Enter new password" minlength="6">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-outline-success" name="action" value="edit_user_detail" type="submit"><i
                                class="fa fa-check" aria-hidden="true"></i>
                            Save</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-danger"
                                aria-hidden="true"></i>Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addTeacherModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form id="addTeacherForm" method="POST" action="">
                    <div class="modal-header">
                        <h5 class="modal-title">Add new teacher</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <label for="UserName">Teacher name</label>
                            <input type="text" class="form-control" id="TeacherNameInput" name="TeacherNameInput"
                                placeholder="Enter teacher's name" required>
                            <label for="Phone">Phone</label>
                            <input type="tel" class="form-control" id="TeacherPhoneInput" name="TeacherPhoneInput"
                                placeholder="Enter phone number" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" required>
                            <label for="Email">Email</label>

                            <input type="text" class="form-control" id="TeacherEmailInput" name="TeacherEmailInput"
                                placeholder="Enter email" required>
                            <label for="password">Password</label>

                            <input type="password" class="form-control" id="TeacherPasswordInput"
                                name="TeacherPasswordInput" placeholder="Enter new password" minlength="6">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-outline-success" name="action" value="add_teacher" type="submit"><i
                                class="fa fa-check" aria-hidden="true"></i>
                            Save</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-danger"
                                aria-hidden="true"></i>Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="removeUserModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form id="removeUserForm" method="POST" action="">
                    <div class="modal-header">
                        <h5 class="modal-title">Remove user dialog</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <h4>Confirm to remove this user permanently.</h3>
                                <input type="text" class="form-control" id="UserIdRemoveInput" name="UserIdInput"
                                    value="" style="display:none" required>
                                <input type="text" class="form-control" id="UserRoleRemoveInput" name="UserRoleInput"
                                    value="" style="display:none" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-outline-success" name="action" value="remove_user" type="submit"><i
                                class="fa fa-check" aria-hidden="true"></i>
                            Yes</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-danger"
                                aria-hidden="true"></i>No</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="blockUserModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form id="blockUserForm" method="POST" action="">
                    <div class="modal-header">
                        <h5 class="modal-title">Block user dialog</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <h4>Confirm to block this user temporarily.</h3>
                                <input type="text" class="form-control" id="UserIdBlockInput" name="UserIdInput"
                                    value="" style="display:none" required>
                                <input type="text" class="form-control" id="UserRoleBlockInput" name="UserRoleInput"
                                    value="" style="display:none" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-outline-success" name="action" value="block_user" type="submit"><i
                                class="fa fa-check" aria-hidden="true"></i>
                            Yes</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-danger"
                                aria-hidden="true"></i>No</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="unblockUserModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form id="unblockUserForm" method="POST" action="">
                    <div class="modal-header">
                        <h5 class="modal-title">Unblock user dialog</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <h4>Confirm to unblock this user.</h3>
                                <input type="text" class="form-control" id="UserIdUnblockInput" name="UserIdInput"
                                    value="" style="display:none" required>
                                <input type="text" class="form-control" id="UserRoleUnblockInput" name="UserRoleInput"
                                    value="" style="display:none" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-outline-success" name="action" value="unblock_user" type="submit"><i
                                class="fa fa-check" aria-hidden="true"></i>
                            Yes</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-danger"
                                aria-hidden="true"></i>No</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Modal End -->
    <!-- Wishlist Start -->
    <div class="wishlist-page">
        <div class="container-fluid">
            <div class="wishlist-page-inner">

                <div class="row user-detail">
                    <div class="col-md-12">
                        <ul class="nav nav-pills nav-justified">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="pill" href="#teacherList">Teachers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="pill" href="#studentList">Students</a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div id="teacherList" class="tab-pane active">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>Username</th>
                                                <th>Role</th>
                                                <th>Email</th>

                                                <th>Phone</th>
                                                <th>&nbsp;</th>
                                            </tr>
                                        </thead>
                                        <tbody class="align-middle">
                                            {{#each teachers}}
                                            <tr>
                                                <td>
                                                    {{this.name}}
                                                    {{#if this.isBlocked}}
                                                <p style="color: red;">(Blocked)</p>
                                                {{/if}}
                                                </td>
                                                <td>{{this.role}}</td>
                                                <td>{{this.email}}</td>
                                                <td>{{this.phoneNumber}}</td>
                                                <td>
                                                    <button id="removeUserBtn" data-toggle="modal"
                                                        data-target="#removeUserModal" data-role="{{this.role}}"
                                                        data-id="{{this._id}}"><i class="fa fa-trash"></i></button>
                                                    <button id="editUserInfoBtn" data-toggle="modal"
                                                        data-target="#editUserInfoModal" data-name="{{this.name}}"
                                                        data-role="{{this.role}}" data-email="{{this.email}}"
                                                        data-phone="{{this.phoneNumber}}" data-id="{{this._id}}"><i
                                                            class="fas fa-pen"></i></button>
                                                    {{#if this.isBlocked}}
                                                    <button value="unblock_user" class="mb-2" type="button"
                                                        data-toggle="modal" data-target="#unblockUserModal"
                                                        data-id="{{this._id}}" data-role="{{this.role}}"><i class="fas fa-lock-open"></i></button>
                                                    {{else}}
                                                    <button value="block_user" class="mb-2" type="button"
                                                        data-toggle="modal" data-target="#blockUserModal"
                                                        data-id="{{this._id}}" data-role="{{this.role}}"><i class="fas fa-lock"></i></button>
                                                    {{/if}}
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>

                                <div class="" align="right">
                                    <button class="btn" id="addTeacherBtn" data-toggle="modal"
                                        data-target="#addTeacherModal"><i class="fa fa-plus mr-2"></i>Add new
                                        teacher</button>
                                </div>
                            </div>
                            <div id="studentList" class="tab-pane fade">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>Username</th>
                                                <th>Role</th>
                                                <th>Email</th>
                                                <th>Phone</th>
                                                <th>&nbsp;</th>
                                            </tr>
                                        </thead>
                                        <tbody class="align-middle">
                                            {{#each students}}
                                            <tr>
                                                <td>
                                                    {{this.name}}
                                                    {{#if this.isBlocked}}
                                                <p style="color: red;">(Blocked)</p>
                                                {{/if}}
                                                </td>
                                                <td>{{this.role}}</td>
                                                <td>{{this.email}}</td>
                                                <td>{{this.phoneNumber}}</td>
                                                <td>
                                                    <button id="removeUserBtn" data-toggle="modal"
                                                        data-target="#removeUserModal" data-role="{{this.role}}"
                                                        data-id="{{this._id}}"><i class="fa fa-trash"></i></button>
                                                    <button id="editUserInfoBtn" data-toggle="modal"
                                                        data-target="#editUserInfoModal" data-name="{{this.name}}"
                                                        data-role="{{this.role}}" data-email="{{this.email}}"
                                                        data-phone="{{this.phoneNumber}}" data-id="{{this._id}}"><i
                                                            class="fas fa-pen"></i></button>
                                                    {{#if this.isBlocked}}
                                                    <button value="unblock_user" class="mb-2" type="button"
                                                        data-toggle="modal" data-target="#unblockUserModal"
                                                        data-id="{{this._id}}" data-role="{{this.role}}"><i class="fas fa-lock-open"></i></button>
                                                    {{else}}
                                                    <button value="block_user" class="mb-2" type="button"
                                                        data-toggle="modal" data-target="#blockUserModal"
                                                        data-id="{{this._id}}" data-role="{{this.role}}"><i class="fas fa-lock"></i></button>
                                                    {{/if}}
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Wishlist End -->

    {{>Footer}}

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/slick/slick.min.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
    <script>
        $('#editUserInfoModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var userid = button.data('id');
            var username = button.data('name');
            var email = button.data('email');
            var phone = button.data('phone');
            var role = button.data('role');
            var modal = $(this)

            modal.find('#UserIdInput').val(userid);
            modal.find('#UserRoleInput').val(role);
            modal.find('#UserNameInput').val(username);
            modal.find('#PhoneInput').val(phone);
            modal.find('#EmailInput').val(email);
        })
        $('#removeUserModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var userid = button.data('id');
            var role = button.data('role');
            var modal = $(this)

            modal.find('#UserIdRemoveInput').val(userid);
            modal.find('#UserRoleRemoveInput').val(role);
        })
        $('#blockUserModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var userid = button.data('id');
            var role = button.data('role');
            var modal = $(this)

            modal.find('#UserIdBlockInput').val(userid);
            modal.find('#UserRoleBlockInput').val(role);
        })
        $('#unblockUserModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var userid = button.data('id');
            var role = button.data('role');
            var modal = $(this)

            modal.find('#UserIdUnblockInput').val(userid);
            modal.find('#UserRoleUnblockInput').val(role);
        })
    </script>
</body>

</html>