<body>
{{>Header}}

{{!-- <!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Products</a></li>
            <li class="breadcrumb-item active">My Account</li>
        </ul>
    </div>
</div>
<!-- Breadcrumb End --> --}}

<!-- My Account Start -->
<div class="my-account">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="tab-content">

                    <div class="tab-pane fade show active" id="account-tab" role="tabpanel"
                         aria-labelledby="account-nav">
                        <form action="/profile" method="post">
                            <h4>Account Details</h4>
                            <div class="row">
                                <div class="col-md-12">
                                    <input class="form-control" type="text" placeholder="Name" name="name"
                                           value={{user.name}} required>
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" type="text" placeholder="Mobile" name="phoneNumber"
                                           value={{user.phoneNumber}} required>
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" type="text" placeholder="Email" name="email"
                                           value={{user.email}} readonly>
                                </div>
                            </div>
                            <h4>Password change</h4>
                            <div class="row">
                                <div class="col-md-12">
                                    <input class="form-control" type="password" placeholder="Current Password"
                                           name="o_password" minlength="6">
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" type="password" placeholder="New Password"
                                           name="new_password" minlength="6">
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" type="password" placeholder="Confirm Password"
                                           name="confirm_password" minlength="6">
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn">Save Changes</button>
                                    {{#if error_message}}
                                        <div>
                                            <p style="color: red;">{{error_message}}</p>
                                        </div>
                                    {{/if}}
                                    {{#if success_message}}
                                        <div>
                                            <p style="color: green;">{{success_message}}</p>
                                        </div>
                                    {{/if}}
<!--                                    <p style="color: green">{{success_message}}</p>-->
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- My Account End -->

{{>Footer}}

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
<script src="/lib/easing/easing.min.js"></script>
<script src="/lib/slick/slick.min.js"></script>

<!-- Template Javascript -->
<script src="/js/main.js"></script>
</body>
</html>
