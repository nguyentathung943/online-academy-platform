                <div class="section-header">
                    <h1>Hot Categories</h1>
                </div>
                <div class="row align-items-center">
                    {{#each categories}}
                        {{>Category}}
                    {{/each}}
                </div>
            </div>
        </div>
        </div>


    {{/ifEquals}}
