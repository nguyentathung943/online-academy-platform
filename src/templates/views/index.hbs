        <div class="cart-page">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="cart-page-inner">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead class="thead-dark" style="background-color: #FF6F61">
                                    <tr>
                                        <th>Name</th>
                                        <th>Quantity</th>
                                    </tr>
                                    </thead>
                                    <tbody class="align-middle">
                                    <tr>
                                        <td>Courses</td>
                                        <td>{{numCourse}}</td>
                                    </tr>
                                    <tr>
                                        <td>Students</td>
                                        <td>{{numStudent}}</td>
                                    </tr>
                                    <tr>
                                        <td>Teachers</td>
                                        <td>{{numTeacher}}</td>
                                    </tr>
                                    <tr>
                                        <td>Registers</td>
                                        <td>{{numRegister}}</td>
                                    </tr>
                                    <tr>
                                        <td>Reviews</td>
                                        <td>{{numReview}}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/ifEquals}}
    {{#ifEquals role "Student"}}
