<body>
{{>Header}}
{{#if role}}
    {{#ifEquals role "Teacher"}}
        <div class="featured-product product">
            <div class="container-fluid">
                <div class="section-header">
                    <h1>Courses you are charging: {{course_owned}}</h1>
                </div>
                <div class="row align-items-center product-slider product-slider-4">
                    {{#each courses}}
                        {{#if this.isBlocked}}
                        {{else}}
                            <div class="col-lg-3">
                                {{>CourseItem_teacher}}
                            </div>
                        {{/if}}
                    {{/each}}
                    {{#each courses}}
                        {{#if this.isBlocked}}
                        {{else}}
                            <div class="col-lg-3">
                                {{>CourseItem_teacher}}
                            </div>
                        {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    {{/ifEquals}}
