        <div class="header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3 mb-0">
                        <nav class="navbar bg-light">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="#featured-courses"><i class="fa fa-home"></i>Feature
                                        Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#most-view-course"><i class="fa fa-home"></i>Most View
                                        Course</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#newest-course"><i class="fa fa-shopping-bag"></i>Newest
                                        Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#hot-categories"><i class="fa fa-plus-square"></i>Hot
                                        Categories</a>
                                </li>

                            </ul>
                        </nav>
                    </div>
                    <div class="col-md-9" id="featured-courses">
                        <div class="header-slider normal-slider">
                            {{#each featuredCourses}}
                                {{#if this.isBlocked}}
                                {{else}}
                                    <div class="header-slider-item">
                                        <div class="product-item row">

                                            <div class="product-image col-5 pr-0">
                                                <a href="/product-detail?id={{this._id}}">
                                                <img src="{{this.avatar}}" alt="Product Image"/>
                                                </a>
                                            </div>
                                            <div class="col-7 pl-0">
                                                <div class="product-title"
                                                     style="height: 60%; display: flex; flex-direction: column; justify-content: center">
                                                    <a href="/product-detail?id={{this._id}}" style="text-align: left
                                                    !important;">
                                                    <p class="text-white m-0">{{this.name}} {{#if completed}}
                                                        <span
                                                                style="border: solid 2px !important; font-size: 12px; font-family: 'Open Sans', sans-serif"
                                                                class="rounded border-success text-success p-1">
                                                    Completed
                                                </span>
                                                    {{else}}
                                                        <span
                                                                style="border: solid 2px !important; font-size: 12px; font-family: 'Open Sans', sans-serif"
                                                                class="rounded border-warning text-warning p-1">
                                                    Updating
                                                </span>
                                                    {{/if}}
                                                    </p>
                                                    <p class="text-white m-0 mt-1">{{this.category.name}}</p>
                                                    <p class="text-white m-0">{{this.owner.name}}</p>
                                                    </a>

                                                    <div style="text-align: left">
                                            <span class="font-weight-bold text-white"
                                                  style="color: #FF6F61">{{this.score}}</span>
                                                        <div class="ratting d-inline">
                                                            {{#each this.starArr}}
                                                                <i class="fa {{this}}"
                                                                   style="font-family: FontAwesome"></i>
                                                            {{/each}}
                                                        </div>
                                                        <span class="text-white">({{this.number_of_reviewer}}) <span
                                                                class="font-weight-bold">({{this.number_of_student}}
                                                            students)</span></span>
                                                    </div>
                                                </div>
                                                <div class="product-price" style="height: 40%">
                                                    <h3><span>$</span>{{this.price}}</h3>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {{/if}}
                            {{/each}}

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Main Slider End -->

        <!-- Brand Start -->
