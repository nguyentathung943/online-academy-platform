<body>
    {{>Header}}

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form flex-sb flex-w" method="POST" action="/teacher/add-course">
                    <span class="login100-form-title p-b-53">
                        Add new course
                    </span>

                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            Course name
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Username is required">
                        <input class="input100" type="text" name="name" required>
                        <span class="focus-input100"></span>
                    </div>

                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            Course picture (URL)
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Username is required">
                        <input class="input100" type="url" name="avatar" required>
                        <span class="focus-input100"></span>
                    </div>
                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            Brief description
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Username is required">
                        <input class="input100" type="text" name="brief_des" required>
                        <span class="focus-input100"></span>
                    </div>

                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            Full Description
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Username is required">
                        <textarea id="mytextarea" name="full_des"></textarea>
                        <span class="focus-input100"></span>
                    </div>
                        

                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            Category
                        </span>
                    </div>

                    <div class="wrap-input100" style="background-color: inherit; border:0px;">
                        <select id="category" name="category" class="custom-select custom-select-lg mb-3">
                            {{#each cate}}
                            <option value={{this._id}}>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            Price
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Price is required">
                        <input class="input100" type="number" min="0" name="price" required>
                        <span class="focus-input100"></span>
                    </div>

                    <div>
                        {{#if success_message}}
                        <div>
                            <p style="color: green;">{{success_message}}</p>
                        </div>
                        {{/if}}
                        {{#if fail_message}}
                        <div>
                            <p style="color: red;">{{fail_message}}</p>
                        </div>
                        {{/if}}
                    </div>

                    <div class="container-login100-form-btn m-t-17">
                        <button class="login100-form-btn" type="submit"> 
                            Add course
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>


