<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>E Store - eCommerce HTML Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="eCommerce HTML Template Free Download" name="keywords">
    <meta content="eCommerce HTML Template Free Download" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap"
          rel="stylesheet">

    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="lib/slick/slick.css" rel="stylesheet">
    <link href="lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    <style>
        a.active {
            background-color: black !important;
            color: #FF6F61 !important;
        }
    </style>

</head>

<body>
{{>Header}}

<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Product List</li>
        </ul>
    </div>
</div>
<!-- Breadcrumb End -->

<!--Product List Start-->
<div class="product-view">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-12 mb-4 p-0">
                        <div class="col-md-4 p-0">
                            <div class="product-short">
                                <div class="dropdown bg-white">
                                    <div class="dropdown-toggle" data-toggle="dropdown">{{option}}</div>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a href="{{host}}score=1" class="dropdown-item">Ascending Rate
                                            Score</a>
                                        <a href="{{host}}score=-1" class="dropdown-item">Descending Rate
                                            Score</a>

                                        <a href="{{host}}price=1" class="dropdown-item">Ascending Price</a>
                                        <a href="{{host}}price=-1" class="dropdown-item">Descending Price</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{#if courses}}
                        <div class="tab-content w-100">
                            {{#each courses}}
                                <div class="tab-pane fade" id="page{{this.id}}">
                                    <div class="row">
                                        {{#each this.data}}

                                            <div class="col-md-3">
                                                {{>CourseItem}}
                                            </div>

                                        {{/each}}
                                    </div>
                                </div>
                            {{/each}}
                        </div>

                    {{else}}
                        <div> COURSE YOU ARE SEARCHING NOT FOUND</div>
                    {{/if}}

                </div>
                <!-- Pagination Start -->
                <div class="col-md-12">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center nav">
                            {{#each courses}}
                                <li class="page-item">
                                    <a class="page-link nav-link" id="btn{{this.id}}" data-toggle="pill"
                                       href="#page{{this.id}}" aria-selected="false" role="tab">{{this.id}}</a></li>
                            {{/each}}
                        </ul>
                    </nav>
                </div>
                <!-- Side Bar Start -->

            </div>
        </div>
    </div>
    <!-- Product List End -->
</div>
<!-- Brand Start -->
<div class="brand">
    <div class="container-fluid">
        <div class="brand-slider">
            <div class="brand-item"><img src="img/brand-1.png" alt=""></div>
            <div class="brand-item"><img src="img/brand-2.png" alt=""></div>
            <div class="brand-item"><img src="img/brand-3.png" alt=""></div>
            <div class="brand-item"><img src="img/brand-4.png" alt=""></div>
            <div class="brand-item"><img src="img/brand-5.png" alt=""></div>
            <div class="brand-item"><img src="img/brand-6.png" alt=""></div>
        </div>
    </div>
</div>
{{>Footer}}
<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
<script src="lib/easing/easing.min.js"></script>
<script src="lib/slick/slick.min.js"></script>
<!-- Template Javascript -->
<script src="js/main.js"></script>
<script>
    jQuery("#btn1").click();
</script>
</body>

</html>